<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80BBBBBB" />
            <corners
                android:topLeftRadius="@dimen/card_radius"
                android:topRightRadius="@dimen/card_radius" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/grid_0"
        android:left="@dimen/shadow_size"
        android:right="@dimen/shadow_size"
        android:top="@dimen/shadow_size">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:topLeftRadius="@dimen/card_radius"
                android:topRightRadius="@dimen/card_radius" />
        </shape>
    </item>
</layer-list>