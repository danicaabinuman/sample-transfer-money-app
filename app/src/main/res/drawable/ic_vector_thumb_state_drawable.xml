<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="14dp"
                        android:height="14dp" />
                    <solid
                        android:color="@color/colorWhite"/>
                    <padding
                        android:bottom="7dp"
                        android:left="7dp"
                        android:right="7dp"
                        android:top="7dp" />

                    <stroke
                        android:width="0.5dp"
                        android:color="@color/cardview_shadow_end_color"/>

                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <size
                        android:width="14dp"
                        android:height="14dp" />
                    <solid android:color="@color/dsColorMediumOrange" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>

            <item>
                <shape android:shape="oval">
                    <size
                        android:width="14dp"
                        android:height="14dp" />
                    <solid
                        android:color="@color/colorWhite"/>
                    <padding
                        android:bottom="7dp"
                        android:left="7dp"
                        android:right="7dp"
                        android:top="7dp" />

                    <stroke
                        android:width="0.5dp"
                        android:color="@color/dsColorLightGray"/>

                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <size
                        android:width="14dp"
                        android:height="14dp" />
                    <solid android:color="@color/dsColorMediumOrange" />
                </shape>
            </item>
        </layer-list>
    </item>

<!--    <item android:drawable="@drawable/ic_vector_slider_thumb" />-->

</selector>