<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed -->
    <item android:drawable="@drawable/bg_button_with_icon_selected_half"
        android:state_pressed="true" />

    <!-- Checked -->
    <item android:drawable="@drawable/bg_button_with_icon_selected_half"
        android:state_checked="true" />

    <!-- Disabled Note: There is no UI for Disabled -->
    <item android:drawable="@drawable/bg_button_with_icon_default_half"
        android:state_enabled="false" />

    <!-- Default -->
    <item android:drawable="@drawable/bg_button_with_icon_default_half" />

</selector>