<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorLightOverLay">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightOverLay" />
            <corners android:radius="@dimen/button_tutorial_radius_button" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/button_tutorial_radius_button"
                android:bottomRightRadius="@dimen/button_tutorial_radius_button"
                android:topLeftRadius="@dimen/button_tutorial_radius_button"
                android:topRightRadius="@dimen/button_tutorial_radius_button" />
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="@dimen/border_half"
                android:color="@color/colorWhite" />
        </shape>
    </item>
</ripple>
