<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl"
    style="@style/MatchWrapParent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_personal_information_2"
        style="@style/TextViewLightOrangeLarge"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginStart="@dimen/content_spacing_half"
        android:gravity="start"
        android:text="@string/title_additional_information"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_personal_information_2"
        app:layout_constraintEnd_toStartOf="@id/btn_personal_information_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_personal_information_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_personal_information_2"
        style="@style/TextViewOrangeLarge"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/text_view_padding"
        android:text="@string/action_edit"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_personal_information_2"
        style="@style/CardViewLight"
        android:layout_width="@dimen/match_constraint"
        android:layout_margin="@dimen/content_spacing_half"
        app:contentPaddingBottom="@dimen/content_spacing"
        app:contentPaddingTop="@dimen/content_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_personal_information_2">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/MatchWrapParent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nationality_title"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:text="@string/title_nationality"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nationality"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:gravity="end"
                android:maxLines="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_nationality_title"
                app:layout_constraintTop_toTopOf="@+id/tv_nationality_title" />

            <View
                android:id="@+id/border_nationality"
                style="@style/BorderHorizontal"
                android:layout_marginTop="@dimen/content_spacing"
                android:background="@drawable/bg_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nationality" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_government_id_title"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginTop="@dimen/content_spacing"
                android:text="@string/hint_business_tin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_nationality"
                app:layout_constraintWidth_percent="0.3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_government_id"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:gravity="end"
                android:maxLines="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_government_id_title"
                app:layout_constraintTop_toTopOf="@+id/tv_government_id_title" />

            <View
                android:id="@+id/border_government_id"
                style="@style/BorderHorizontal"
                android:layout_marginTop="@dimen/content_spacing"
                android:background="@drawable/bg_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_government_id" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date_of_birth_title"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginTop="@dimen/content_spacing"
                android:text="@string/title_date_of_birth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_government_id"
                app:layout_constraintWidth_percent="0.3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date_of_birth"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:gravity="end"
                android:maxLines="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_date_of_birth_title"
                app:layout_constraintTop_toTopOf="@+id/tv_date_of_birth_title" />

            <View
                android:id="@+id/border_date_of_birth"
                style="@style/BorderHorizontal"
                android:layout_marginTop="@dimen/content_spacing"
                android:background="@drawable/bg_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_of_birth" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_place_of_birth_title"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginTop="@dimen/content_spacing"
                android:text="@string/title_place_of_birth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_date_of_birth"
                app:layout_constraintWidth_percent="0.3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_place_of_birth"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:gravity="end"
                android:maxLines="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_place_of_birth_title"
                app:layout_constraintTop_toTopOf="@+id/tv_place_of_birth_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>