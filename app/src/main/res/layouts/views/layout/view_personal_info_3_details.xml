<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl"
    style="@style/MatchWrapParent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_personal_information_3"
        style="@style/TextViewLightOrangeLarge"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginStart="@dimen/content_spacing_half"
        android:gravity="start"
        android:text="@string/title_home_address"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_personal_information_3"
        app:layout_constraintEnd_toStartOf="@id/btn_personal_information_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_personal_information_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_personal_information_3"
        style="@style/TextViewOrangeLarge"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/text_view_padding"
        android:text="@string/action_edit"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_personal_information_3"
        style="@style/CardViewLight"
        android:layout_width="@dimen/match_constraint"
        android:layout_margin="@dimen/content_spacing_half"
        app:contentPaddingBottom="@dimen/content_spacing"
        app:contentPaddingTop="@dimen/content_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_personal_information_3">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/MatchWrapParent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_address_title"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:text="@string/title_present_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_address"
                style="@style/TextViewDarkForm"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:gravity="end"
                android:maxLines="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_address_title"
                app:layout_constraintTop_toTopOf="@+id/tv_address_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>