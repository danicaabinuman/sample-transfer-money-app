<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_gravity="fill_vertical"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/MatchParent"
            android:orientation="vertical"
            android:padding="@dimen/grid_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_as_non_filipino_citizenship"
                style="@style/MatchConstraint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/grid_4"
                android:layout_marginBottom="@dimen/grid_3"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_non_filipino" />

            <TextView
                android:id="@+id/tv_as_non_filipino_citizen_header"
                style="@style/SMEHeadlineH2"
                android:textColor="@color/dsColorMediumOrange"
                android:text="@string/as_non_filipino_citizenship_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_as_non_filipino_citizenship"
                android:layout_marginTop="@dimen/grid_5"/>

            <TextView
                android:id="@+id/tv_as_non_filipino_citizen_description"
                style="@style/SMEBody"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/grid_3"
                android:layout_marginEnd="@dimen/grid_3"
                android:layout_marginTop="@dimen/grid_1_half"
                android:gravity="center"
                android:text="@string/as_non_filipino_citizenship_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_as_non_filipino_citizen_header"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_as_non_filipino_citizen_section_title"
                style="@style/SMESubtitle2"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginTop="@dimen/grid_5"
                android:text="@string/as_non_filipino_citizenship_section_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_as_non_filipino_citizen_description" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_as_non_filipino_citizen_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginTop="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                android:background="@drawable/bg_white_rounded_radius10"
                android:elevation="4dp"
                android:padding="@dimen/grid_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_as_non_filipino_citizen_section_title">

                <TextView
                    android:id="@+id/tv_as_non_filipino_citizen_name_label"
                    style="@style/SMECaption"
                    android:text="@string/title_name"
                    app:layout_constraintEnd_toEndOf="@id/gl_as_non_filipino_citizen_section"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_as_non_filipino_citizen_name_value"
                    style="@style/SMEBody"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_as_non_filipino_citizen_name_label"
                    app:layout_constraintBottom_toBottomOf="@id/tv_as_non_filipino_citizen_name_label"
                    app:layout_constraintStart_toEndOf="@id/gl_as_non_filipino_citizen_section"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="John Doe"/>

                <View
                    android:id="@+id/v_as_non_filipino_citizen_line_1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/grid_2"
                    android:background="@drawable/bg_line_dashed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_as_non_filipino_citizen_name_label" />

                <TextView
                    android:id="@+id/tv_as_non_filipino_citizen_email_label"
                    style="@style/SMECaption"
                    android:text="@string/title_email"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/grid_2"
                    app:layout_constraintTop_toBottomOf="@id/v_as_non_filipino_citizen_line_1" />

                <TextView
                    android:id="@+id/tv_as_non_filipino_citizen_email_value"
                    style="@style/SMEBody"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_as_non_filipino_citizen_email_label"
                    app:layout_constraintBottom_toBottomOf="@id/tv_as_non_filipino_citizen_email_label"
                    app:layout_constraintStart_toEndOf="@id/gl_as_non_filipino_citizen_section"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="john_doe@gmail.com"/>

                <View
                    android:id="@+id/v_as_non_filipino_citizen_line_2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/grid_2"
                    android:background="@drawable/bg_line_dashed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_as_non_filipino_citizen_email_label" />

                <TextView
                    android:id="@+id/tv_as_non_filipino_citizen_mobile_label"
                    style="@style/SMECaption"
                    android:layout_marginTop="@dimen/grid_2"
                    android:text="@string/hint_mobile_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_as_non_filipino_citizen_line_2" />

                <TextView
                    android:id="@+id/tv_as_non_filipino_citizen_mobile_value"
                    style="@style/SMEBody"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="@id/tv_as_non_filipino_citizen_mobile_label"
                    app:layout_constraintBottom_toBottomOf="@id/tv_as_non_filipino_citizen_mobile_label"
                    app:layout_constraintStart_toEndOf="@id/gl_as_non_filipino_citizen_section"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="+63 942 292 3841"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_as_non_filipino_citizen_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintGuide_percent="0.4"
                    app:layout_constraintStart_toEndOf="@id/tv_as_non_filipino_citizen_mobile_label"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_default="percent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_as_non_filipino_citizen_go_to_dashboard"
                style="@style/SMEPrimaryButtonLarge"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginTop="@dimen/grid_5"
                android:layout_marginEnd="@dimen/grid_1"
                android:layout_marginBottom="@dimen/grid_1"
                app:layout_constraintVertical_bias="1"
                android:text="@string/btn_back_to_dashboard"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_as_non_filipino_citizen_section" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>