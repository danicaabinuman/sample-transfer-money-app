<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewHeader"
        style="@style/TextHeaderLight"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/content_group_spacing"
        android:layout_marginTop="@dimen/content_margin_main_splash_top"
        android:layout_marginEnd="@dimen/content_group_spacing"
        android:gravity="center"
        android:text="@string/title_important"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutImportant1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutImportant1"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/content_spacing_xxl"
        android:layout_marginTop="@dimen/content_spacing_xxl"
        android:layout_marginEnd="@dimen/content_spacing_xxl"
        android:layout_marginBottom="@dimen/content_spacing"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutImportant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeader">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ImageViewIconLarge"
            android:layout_marginEnd="@dimen/content_spacing_half"
            app:srcCompat="@drawable/ic_bell_orange" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewImportant1"
            style="@style/TextViewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/text_view_spacing"
            android:maxLines="10"
            android:text="@string/desc_check_deposit_important_1"
            android:textColor="@color/colorLightTextDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutImportant2"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/content_spacing_xxl"
        android:layout_marginEnd="@dimen/content_spacing_xxl"
        android:layout_marginBottom="@dimen/content_spacing"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutImportant3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutImportant1">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ImageViewIconLarge"
            android:layout_marginEnd="@dimen/content_spacing_half"
            app:srcCompat="@drawable/ic_bell_orange" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewImportant2"
            style="@style/TextViewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/text_view_spacing"
            android:maxLines="10"
            android:text="@string/desc_check_deposit_important_2"
            android:textColor="@color/colorLightTextDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutImportant3"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/content_spacing_xxl"
        android:layout_marginEnd="@dimen/content_spacing_xxl"
        android:layout_marginBottom="@dimen/content_spacing"
        app:layout_constraintBottom_toTopOf="@+id/buttonDepositCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutImportant2">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ImageViewIconLarge"
            android:layout_marginEnd="@dimen/content_spacing_half"
            app:srcCompat="@drawable/ic_bell_orange" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewImportant3"
            style="@style/TextViewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/text_view_spacing"
            android:maxLines="10"
            android:text="@string/desc_check_deposit_important_3"
            android:textColor="@color/colorLightTextDescription" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDepositCheck"
        style="@style/RoundedButtonOrange"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginTop="@dimen/content_group_spacing"
        android:layout_marginRight="@dimen/content_margin"
        android:text="@string/action_deposit_check"
        android:layout_marginBottom="@dimen/content_spacing_half"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancel"
        style="@style/RoundedButtonLightOverlay"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginTop="@dimen/content_group_spacing"
        android:layout_marginRight="@dimen/content_margin"
        android:layout_marginBottom="@dimen/content_spacing"
        android:paddingTop="@dimen/button_padding"
        android:paddingBottom="@dimen/button_padding"
        android:text="@string/action_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>