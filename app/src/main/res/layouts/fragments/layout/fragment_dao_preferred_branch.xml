<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    style="@style/MatchParent">

    <ScrollView
        style="@style/MatchConstraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/MatchWrapParent"
            android:paddingBottom="@dimen/content_spacing_large">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/match_constraint"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/match_constraint"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.95"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_preferred_branch"
                style="@style/TextViewLightOrangeLarge"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginTop="@dimen/content_spacing"
                android:gravity="start"
                android:text="@string/title_preferred_branch"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_preferred_branch"
                style="@style/TextInputLayoutForm"
                android:layout_marginTop="@dimen/content_spacing_half"
                android:hint="@string/hint_preferred_branch"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tv_preferred_branch">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_preferred_branch"
                    style="@style/TextInputEditTextForm.DropDownOrange" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                style="@style/TextViewLightOrangeLarge"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginTop="@dimen/content_spacing"
                android:gravity="start"
                android:text="@string/title_preferred_date"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/til_preferred_branch" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_date"
                style="@style/TextInputLayoutForm"
                android:layout_marginTop="@dimen/content_spacing_small"
                android:hint="@string/hint_select_a_date"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tv_date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_date"
                    style="@style/TextInputEditTextForm.DatePicker" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>