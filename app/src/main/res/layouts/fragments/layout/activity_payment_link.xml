<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/DefaultBackgroundMatchParent">

    <include
        android:id="@+id/viewToolbar"
        layout="@layout/widget_transparent_dashboard_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_20"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextSearch"
            style="@style/EditTextReferenceNumber"
            android:layout_marginTop="@dimen/content_spacing"
            android:layout_marginBottom="@dimen/content_spacing"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="5.4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/bg_card_view_payment_link_active"
                android:textColor="#FFFFFF"
                android:text="All"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/bg_card_view_payment_link_inactive"
                android:text="Unpaid"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/bg_card_view_payment_link_inactive"
                android:text="Paid"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/bg_card_view_payment_link_inactive"
                android:text="Expired"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/bg_card_view_payment_link_inactive"
                android:text="Refunded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_view_payment_status"
            android:gravity="center"
            android:weightSum="2.1"
            android:layout_marginBottom="@dimen/text_20"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:text="Reference No."
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="16dp"
                        android:textSize="10sp"
                        android:text="UNPAID"
                        android:gravity="center"
                        android:textColor="#FF9800"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_unpaid"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="ABCD-12345-09876"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Jan 15, 2021, 6:00 PM"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/view_dashed"
                android:layout_weight=".1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Amount"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="PHP 1,000.00"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="Description"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="10 Peppermint Candles"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_view_payment_status"
            android:gravity="center"
            android:weightSum="2.1"
            android:layout_marginBottom="@dimen/text_20"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:text="Reference No."
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="16dp"
                        android:textSize="10sp"
                        android:text="PAID"
                        android:gravity="center"
                        android:textColor="#5CA500"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_paid"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="ABCD-12345-09876"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Jan 15, 2021, 6:00 PM"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/view_dashed"
                android:layout_weight=".1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Amount"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="PHP 1,000.00"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="Description"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="10 Peppermint Candles"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_view_payment_status"
            android:gravity="center"
            android:weightSum="2.1"
            android:layout_marginBottom="@dimen/text_20"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:text="Reference No."
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="16dp"
                        android:textSize="10sp"
                        android:text="EXPIRED"
                        android:gravity="center"
                        android:textColor="#E83C18"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_expired"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="ABCD-12345-09876"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Jan 15, 2021, 6:00 PM"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/view_dashed"
                android:layout_weight=".1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Amount"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="PHP 1,000.00"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="Description"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="10 Peppermint Candles"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchParent">

        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottomNavigationBTR"
            style="@style/MatchConstraint"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingTop="@dimen/content_spacing_small"
            android:paddingBottom="@dimen/content_spacing_half"
            app:itemBackground="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <include
            android:id="@+id/viewApprovalsNavigation"
            android:visibility="gone"
            layout="@layout/widget_approvals_navigation"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            app:layout_constraintTop_toTopOf="@+id/bottomNavigationBTR"
            app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationBTR"
            app:layout_constraintStart_toStartOf="@+id/bottomNavigationBTR"
            app:layout_constraintEnd_toEndOf="@+id/bottomNavigationBTR" />

        <View
            style="@style/BorderHorizontal"
            android:background="@color/colorGreyLight"
            app:layout_constraintStart_toStartOf="@+id/viewApprovalsNavigation"
            app:layout_constraintEnd_toEndOf="@+id/viewApprovalsNavigation"
            app:layout_constraintTop_toTopOf="@+id/viewApprovalsNavigation"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>