<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DefaultBackgroundMatchParent"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/viewToolbar"
            layout="@layout/widget_transparent_dashboard_appbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/text_20"
            android:layout_marginRight="@dimen/text_20"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextSearch"
                style="@style/EditTextReferenceNumber"
                android:layout_marginTop="@dimen/content_spacing"
                android:layout_marginBottom="@dimen/content_spacing"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="5.4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:background="@drawable/bg_card_view_payment_link_active"
                    android:textColor="#FFFFFF"
                    android:text="@string/payment_link_tab_all"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:background="@drawable/bg_card_view_payment_link_inactive"
                    android:text="@string/payment_link_tab_unpaid"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:background="@drawable/bg_card_view_payment_link_inactive"
                    android:text="@string/payment_link_tab_paid"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:background="@drawable/bg_card_view_payment_link_inactive"
                    android:text="@string/payment_link_tab_expired"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:background="@drawable/bg_card_view_payment_link_inactive"
                    android:text="@string/payment_link_tab_refunded"/>
            </LinearLayout>





        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPaymentLinkList"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:padding="@dimen/grid_2"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/MatchWrapParent">

            <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
                android:id="@+id/bottomNavigationBTR"
                style="@style/MatchConstraint"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/content_spacing_small"
                android:paddingBottom="@dimen/content_spacing_half"
                app:itemBackground="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <include
                android:id="@+id/viewApprovalsNavigation"
                android:visibility="gone"
                layout="@layout/widget_approvals_navigation"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/match_constraint"
                app:layout_constraintTop_toTopOf="@+id/bottomNavigationBTR"
                app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationBTR"
                app:layout_constraintStart_toStartOf="@+id/bottomNavigationBTR"
                app:layout_constraintEnd_toEndOf="@+id/bottomNavigationBTR" />

            <View
                style="@style/BorderHorizontal"
                android:background="@color/colorGreyLight"
                app:layout_constraintStart_toStartOf="@+id/viewApprovalsNavigation"
                app:layout_constraintEnd_toEndOf="@+id/viewApprovalsNavigation"
                app:layout_constraintTop_toTopOf="@+id/viewApprovalsNavigation"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>
