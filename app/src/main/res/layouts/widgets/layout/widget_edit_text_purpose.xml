<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPurpose"
        style="@style/TextInputLayoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_select_purpose"
        android:layout_marginTop="@dimen/content_spacing_edit_text"
        app:boxBackgroundColor="@color/colorDisableTextInputEditText"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextPurpose"
            android:enabled="false"
            style="@style/TextInputEditTextForm.DropDownOrange" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutLeavePurpose"
        style="@style/TextInputLayoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="@string/hint_leave_purpose"
        android:layout_marginTop="@dimen/content_spacing_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPurpose">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextLeavePurpose"
            style="@style/TextInputEditTextForm" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
