<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        android:scaleType="centerCrop"
        style="@style/ImageViewShareHeaderLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewQRCode"
        android:layout_width="@dimen/image_view_qr_code"
        android:layout_height="@dimen/image_view_qr_code"
        android:layout_marginTop="@dimen/content_spacing_half"
        android:layout_marginEnd="@dimen/content_spacing"
        android:layout_marginBottom="@dimen/content_spacing_half"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewQRCodeDesc"
        style="@style/TextViewThemeSmall"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginStart="@dimen/content_spacing"
        android:layout_marginEnd="@dimen/content_spacing"
        android:gravity="end"
        android:lineSpacingExtra="@dimen/text_view_spacing"
        android:text="@string/desc_scan_me"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewQRCode"
        app:layout_constraintEnd_toStartOf="@+id/imageViewQRCode"
        app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
        app:layout_constraintTop_toTopOf="@+id/imageViewQRCode" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLogo"
        style="@style/ImageViewLogo"
        android:layout_width="@dimen/image_view_header_width"
        android:layout_height="@dimen/image_view_header_height"
        android:layout_marginStart="@dimen/content_spacing"
        android:layout_marginTop="@dimen/content_spacing"
        android:layout_marginBottom="@dimen/content_spacing"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>