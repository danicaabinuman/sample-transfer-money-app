<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrapParent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAllowedSourceAccounts"
        style="@style/TextInputLayoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_allowed_source_accounts"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextAllowedSourceAccounts"
            style="@style/TextInputEditTextForm.Selector" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAllowedSourceAccounts"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_rectangle"
        android:orientation="vertical"
        android:padding="@dimen/content_spacing"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutAllowedSourceAccounts" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewClose"
        style="@style/ImageViewCloseIcon"
        android:layout_margin="@dimen/content_spacing_small"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutAllowedSourceAccounts"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutAllowedSourceAccounts" />

</androidx.constraintlayout.widget.ConstraintLayout>