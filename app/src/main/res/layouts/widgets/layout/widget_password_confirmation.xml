<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent"
    android:padding="@dimen/content_spacing_half">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_password_1"
        style="@style/ImageViewPasswordStrength"
        android:src="@drawable/ic_password_invalid"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_password_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_password_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_password_1"
        style="@style/TextViewTheme"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/content_spacing"
        android:layout_marginRight="@dimen/content_spacing"
        android:text="@string/msg_password_should_be_8_30_characters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_password_1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_password_2"
        style="@style/ImageViewPasswordStrength"
        android:layout_marginTop="@dimen/image_view_icon_padding"
        android:src="@drawable/ic_password_invalid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_password_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_password_2"
        style="@style/TextViewTheme"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/content_spacing"
        android:layout_marginRight="@dimen/content_spacing"
        android:text="@string/msg_password_should_have_an_alphabetical_character"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_password_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_password_2"
        app:layout_constraintTop_toTopOf="@+id/image_view_password_2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_password_3"
        style="@style/ImageViewPasswordStrength"
        android:layout_marginTop="@dimen/image_view_icon_padding"
        android:src="@drawable/ic_password_invalid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_password_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_password_3"
        style="@style/TextViewTheme"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/content_spacing"
        android:layout_marginRight="@dimen/content_spacing"
        android:text="@string/msg_password_should_have_a_number"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_password_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_password_3"
        app:layout_constraintTop_toTopOf="@+id/image_view_password_3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_password_4"
        style="@style/ImageViewPasswordStrength"
        android:layout_marginTop="@dimen/image_view_icon_padding"
        android:src="@drawable/ic_password_invalid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_password_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_password_4"
        style="@style/TextViewTheme"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/content_spacing"
        android:layout_marginRight="@dimen/content_spacing"
        android:text="@string/msg_password_should_have_a_symbol"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_password_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_password_4"
        app:layout_constraintTop_toTopOf="@+id/image_view_password_4" />

</androidx.constraintlayout.widget.ConstraintLayout>