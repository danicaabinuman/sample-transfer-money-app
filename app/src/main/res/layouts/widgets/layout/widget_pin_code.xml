<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPin1"
        style="@style/PinCodeEditText"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:background="@drawable/bg_edittext_underline_selected"
        android:imeOptions="actionNext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPin2"
        style="@style/PinCodeEditText"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:imeOptions="actionNext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPin3"
        style="@style/PinCodeEditText"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:imeOptions="actionNext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPin4"
        style="@style/PinCodeEditText"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:imeOptions="actionNext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPin5"
        style="@style/PinCodeEditText"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:imeOptions="actionNext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPin6"
        style="@style/PinCodeEditText"
        android:imeOptions="actionNext" />

</LinearLayout>