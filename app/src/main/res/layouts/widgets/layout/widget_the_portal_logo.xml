<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WrapContent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewThePortal"
        style="@style/ImageViewLogo"
        android:layout_width="@dimen/grid_42"
        android:layout_height="@dimen/grid_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewByUnionBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/content_spacing_small"
        app:layout_constraintEnd_toEndOf="@+id/imageViewThePortal"
        app:layout_constraintTop_toBottomOf="@+id/imageViewThePortal"
        app:srcCompat="@drawable/ic_by_unionbank" />

</androidx.constraintlayout.widget.ConstraintLayout>