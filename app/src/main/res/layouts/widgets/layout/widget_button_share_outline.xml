<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonShare"
        style="@style/RoundedButtonGrayTransparent"
        android:layout_width="@dimen/match_constraint"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewShare"
        android:layout_width="@dimen/image_view_icon_mini_size"
        android:layout_height="@dimen/image_view_icon_mini_size"
        android:layout_marginEnd="@dimen/content_spacing_small"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/buttonShare"
        app:layout_constraintEnd_toStartOf="@+id/textViewShare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/buttonShare"
        app:layout_constraintTop_toTopOf="@+id/buttonShare"
        app:srcCompat="@drawable/ic_share_gray" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewShare"
        style="@style/TextViewTheme"
        android:text="@string/action_share"
        android:textAllCaps="true"
        android:textColor="@color/colorButtonGray"
        android:clickable="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonShare"
        app:layout_constraintEnd_toEndOf="@+id/buttonShare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageViewShare"
        app:layout_constraintTop_toTopOf="@+id/buttonShare" />

</androidx.constraintlayout.widget.ConstraintLayout>