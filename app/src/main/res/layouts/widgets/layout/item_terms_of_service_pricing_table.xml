<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_right_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="Payment Method"
                android:textColor="#4A4A4A"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/for_table_pricing_left_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="Fee per Transaction"
                android:textColor="#4A4A4A"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_right_top_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="UnionBank"
                android:textColor="#4A4A4A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fncUnionBank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/for_table_pricing_left_top_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/free_until_further_notice_parenthesis"
                android:textColor="#4A4A4A"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_right_top_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Instapay"
                android:textColor="#4A4A4A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fncInstapay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_left_top_bottom"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="PHP 15.00"
                android:textColor="#4A4A4A"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_right_top_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/e_wallet_gcash_grabpay"
                android:textColor="#4A4A4A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fncEWallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/for_table_pricing_left_top_bottom"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/tc_2_00"
                android:textColor="#4A4A4A"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_right_top_bottom"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/over_the_counter"
                android:textColor="#4A4A4A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fncCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_left_top_bottom"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/php_20_00"
                android:textColor="#4A4A4A"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/for_table_pricing_right_top"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="@string/visa_mastercard_with_slash"
                android:textColor="#4A4A4A"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/fncOTC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/for_table_pricing_left_top"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="@string/percent_3_5_per_transaction"
                android:textColor="#4A4A4A"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>