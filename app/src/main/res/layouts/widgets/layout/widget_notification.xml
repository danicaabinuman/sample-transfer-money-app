<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:tint="?colorImage"
    android:clickable="true"
    android:focusable="true"
    android:background="?selectableItemBackgroundBorderless"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewNotificationBadgeIcon"
        android:layout_width="@dimen/grid_1"
        android:layout_height="@dimen/grid_1"
        android:layout_marginTop="@dimen/grid_1_half"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="0.1dp"
        app:srcCompat="@drawable/circle_red_badge" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewNotificationBadge"
        style="@style/ImageViewToolbarIcon"
        android:scaleType="center"
        app:tint="?colorImage"
        app:srcCompat="@drawable/ic_vector_dashboard_notifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>