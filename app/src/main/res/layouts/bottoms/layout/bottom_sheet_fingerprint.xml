<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintFingerprint"
        style="@style/BottomSheetBackground"
        android:layout_marginTop="@dimen/content_section_top_spacing"
        android:padding="@dimen/content_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewFingerprintTitle"
            style="@style/TextViewThemeXL"
            android:layout_marginTop="@dimen/content_group_spacing"
            android:text="@string/title_login_with_fingerprint"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewFingerprintDesc"
            style="@style/TextViewTheme"
            android:layout_width="@dimen/match_constraint"
            android:layout_marginStart="@dimen/content_spacing_large"
            android:layout_marginTop="@dimen/content_spacing_half"
            android:layout_marginEnd="@dimen/content_spacing_large"
            android:gravity="center"
            android:text="@string/msg_fingerprint_sensor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFingerprintTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            style="@style/RoundedButtonBorderedLightOverLay"
            android:layout_height="@dimen/button_small_size"
            android:layout_marginLeft="@dimen/content_group_spacing"
            android:layout_marginTop="@dimen/grid_5_half"
            android:layout_marginRight="@dimen/content_group_spacing"
            android:layout_marginBottom="@dimen/content_spacing"
            android:text="@string/action_close"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFingerprintDesc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewCircleIcon"
        android:layout_width="@dimen/circle_icon_size"
        android:layout_height="@dimen/circle_icon_size"
        android:background="@drawable/circle_solid_orange"
        app:layout_constraintBottom_toTopOf="@+id/constraintFingerprint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintFingerprint" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewIcon"
        style="@style/MatchConstraint"
        android:padding="@dimen/image_view_icon_half_dialog_padding"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/viewCircleIcon"
        app:layout_constraintEnd_toEndOf="@+id/viewCircleIcon"
        app:layout_constraintStart_toStartOf="@+id/viewCircleIcon"
        app:layout_constraintTop_toTopOf="@+id/viewCircleIcon"
        app:srcCompat="@drawable/ic_fingerprint_white_48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>