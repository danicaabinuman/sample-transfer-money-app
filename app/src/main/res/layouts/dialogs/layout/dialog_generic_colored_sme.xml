<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_gradient_white_radius4"
    android:gravity="center"
    android:minWidth="@dimen/dialog_width"
    android:orientation="vertical"
    android:paddingTop="@dimen/grid_3"
    android:paddingBottom="@dimen/grid_3"
    android:paddingStart="@dimen/grid_1"
    android:paddingEnd="@dimen/grid_1">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_9_half"
        android:layout_marginBottom="@dimen/grid_3_half"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:src="@drawable/ic_wallet" />

    <TextView
        android:id="@+id/textViewDialogTitle"
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:gravity="center"
        android:textColor="@color/colorSMEMediumOrange"
        android:textStyle="bold"
        tools:text="@string/title_success" />

    <TextView
        android:id="@+id/textViewDialogContent"
        style="@style/SMEBody"
        android:layout_marginBottom="@dimen/grid_3"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        tools:text="@string/desc_online_banking_products" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPositive"
        style="@style/SMEPrimaryButtonLarge"
        android:layout_height="@dimen/button_small_size"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:layout_marginBottom="@dimen/grid_1"
        android:text="@string/action_next" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNegative"
        style="@style/SMETertiaryButtonLarge"
        android:layout_height="@dimen/button_small_size"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        tools:text="@string/action_not_now" />

</androidx.appcompat.widget.LinearLayoutCompat>
