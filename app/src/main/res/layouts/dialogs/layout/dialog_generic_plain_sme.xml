<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_rounded_radius10"
    android:gravity="center"
    android:minWidth="@dimen/dialog_width"
    android:orientation="vertical"
    android:paddingTop="@dimen/grid_3"
    android:paddingBottom="@dimen/grid_3"
    android:paddingStart="@dimen/grid_1"
    android:paddingEnd="@dimen/grid_1">

    <ImageView
        android:id="@+id/imageViewIconPlain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_9_half"
        android:layout_marginBottom="@dimen/grid_3_half"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:src="@drawable/ic_wallet" />

    <TextView
        android:id="@+id/textViewDialogTitlePlain"
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        tools:text="@string/title_success"/>

    <TextView
        android:id="@+id/textViewDialogContentPlain"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_3"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:gravity="center"
        android:textColor="#4B4948"
        tools:text="@string/desc_online_banking_products" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPositivePlain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_size"
        android:background="@drawable/bg_white_rounded_radius16"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:text="@string/action_next"
        android:layout_marginBottom="@dimen/grid_1_half"
        android:textColor="#979797"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNegativePlain"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_size"
        android:background="@drawable/bg_white_rounded_radius10"
        android:layout_marginTop="@dimen/grid_1_half"
        android:layout_marginStart="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:textColor="@color/colorButtonGray"
        tools:text="@string/action_not_now"
        android:textStyle="bold"/>

</androidx.appcompat.widget.LinearLayoutCompat>
