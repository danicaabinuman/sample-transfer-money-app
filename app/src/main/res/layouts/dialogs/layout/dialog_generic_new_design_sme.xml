<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_background"
        style="@style/RoundedDialogBackground"
        android:padding="@dimen/grid_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNewDialogTitle"
            style="@style/SMESubtitle1"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/grid_2"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_marginEnd="@dimen/grid_1"
            android:text="@string/title_bills_payment_validation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNewDialogContent"
            style="@style/SMEBodyMediumGray"
            android:width="0dp"
            android:layout_width="@dimen/match_constraint"
            android:layout_marginTop="@dimen/grid_2"
            android:layout_marginStart="@dimen/grid_1"
            android:layout_marginEnd="@dimen/grid_1"
            android:lineSpacingExtra="5dp"
            tools:text="@string/tc_ipr_content_2a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNewDialogTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNewNegative"
            style="@style/SMESecondaryButtonLarge"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/content_group_spacing"
            android:text="@string/action_no"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/grid_1"
            android:layout_marginBottom="@dimen/grid_2"
            android:layout_marginStart="@dimen/grid_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonNewPositive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNewDialogContent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNewPositive"
            style="@style/SMEPrimaryButtonLarge"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/content_group_spacing"
            android:layout_marginStart="@dimen/grid_1"
            android:text="@string/action_yes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/grid_2"
            android:layout_marginEnd="@dimen/grid_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonNewNegative"
            app:layout_constraintTop_toBottomOf="@+id/textViewNewDialogContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








