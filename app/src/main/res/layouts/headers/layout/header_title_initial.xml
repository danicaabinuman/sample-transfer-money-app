<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent"
    android:layout_height="@dimen/list_header_size">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewHeaderTitle"
        style="@style/TextViewOrangeLarge"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        android:gravity="start|bottom"
        android:paddingStart="@dimen/content_spacing"
        android:paddingBottom="@dimen/content_spacing_half"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewBorder2"
        style="@style/BorderHorizontal"
        android:background="@color/colorGreyLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>