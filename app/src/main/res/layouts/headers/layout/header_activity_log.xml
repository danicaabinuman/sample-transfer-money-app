<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent"
    android:layout_height="@dimen/list_header_size">

    <View
        android:id="@+id/viewBorder"
        style="@style/BorderHorizontal"
        android:layout_width="@dimen/border_half"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginStart="@dimen/content_group_spacing"
        android:background="@color/colorUnSeenStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        style="@style/TextViewDarkLarge"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginStart="@dimen/content_spacing"
        android:gravity="bottom"
        android:paddingStart="@dimen/text_view_margin"
        android:paddingBottom="@dimen/text_view_spacing"
        android:text="@string/title_active_organization"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewBorder"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
