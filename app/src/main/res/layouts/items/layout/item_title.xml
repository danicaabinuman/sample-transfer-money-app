<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutItemTitle"
    style="@style/MatchWrapParent"
    android:background="@drawable/bg_rectangle_white"
    android:layout_height="@dimen/list_item_size">

    <View
        android:id="@+id/viewBorder"
        style="@style/BorderHorizontal"
        android:background="@color/colorGreyLight"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewItemTitle"
        style="@style/TextViewDark"
        android:paddingStart="@dimen/content_spacing"
        android:paddingLeft="@dimen/content_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewSelected"
        style="@style/ImageViewIcon"
        android:layout_marginEnd="@dimen/content_spacing"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_orange" />

    <View
        android:id="@+id/viewBorder2"
        style="@style/BorderHorizontal"
        android:background="@color/colorGreyLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>