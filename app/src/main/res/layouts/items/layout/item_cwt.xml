<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent">

    <View
        android:id="@+id/viewBorderTop"
        style="@style/BorderHorizontal"
        android:background="@color/colorGreyLight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCWTTitle"
        style="@style/TextViewDarkForm"
        android:layout_margin="@dimen/content_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBorderTop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCWT"
        style="@style/TextViewDarkForm"
        android:layout_width="@dimen/match_constraint"
        android:layout_margin="@dimen/content_spacing"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCWTTitle"
        app:layout_constraintTop_toBottomOf="@+id/viewBorderTop" />

    <View
        android:id="@+id/viewBorderBottom"
        style="@style/BorderHorizontal"
        android:background="@color/colorGreyLight"
        android:layout_marginTop="@dimen/content_spacing"
        app:layout_constraintTop_toBottomOf="@+id/textViewCWT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>