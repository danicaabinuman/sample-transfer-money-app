<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrapParent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBillerFieldTitle"
        style="@style/TextViewTheme"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginTop="@dimen/content_spacing_half"
        android:paddingEnd="@dimen/content_spacing"
        app:layout_constraintEnd_toStartOf="@+id/textViewBillerFieldValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBillerFieldValue"
        style="@style/TextViewTheme"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginTop="@dimen/content_spacing_half"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewBillerFieldTitle"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>