<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrapParent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAccountName"
        style="@style/TextViewDark"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginEnd="@dimen/content_group_spacing"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewAccountNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAccountNumber"
        style="@style/TextViewDark"
        android:layout_width="@dimen/match_constraint"
        android:layout_marginEnd="@dimen/content_group_spacing"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAccountName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>