<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewBranch"
    style="@style/CardViewItem">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutBranch"
        style="@style/MatchWrapParent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewName"
            style="@style/TextViewDark"
            android:layout_width="@dimen/match_constraint"
            android:layout_marginEnd="@dimen/content_spacing"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textViewBranchCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewBranchCode"
            style="@style/TextViewDarkSmall"
            android:layout_width="@dimen/match_constraint"
            android:gravity="end"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAddress"
            style="@style/TextViewDarkSmall"
            android:layout_marginTop="@dimen/content_spacing_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>