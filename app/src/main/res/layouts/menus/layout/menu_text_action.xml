<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WrapContent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMenuTitle"
        style="@style/TextViewTheme"
        android:layout_marginEnd="@dimen/content_spacing_half"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="@dimen/text_view_padding"
        android:paddingBottom="@dimen/text_view_padding"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="@dimen/content_spacing"
        android:layout_height="@dimen/match_constraint"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMenuTitle"
        app:layout_constraintStart_toEndOf="@+id/textViewMenuTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewMenuTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
