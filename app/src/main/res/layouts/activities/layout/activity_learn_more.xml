<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParent">

    <include
        android:id="@+id/viewToolbar"
        layout="@layout/widget_transparent_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/DefaultBackgroundMatchConstraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewToolbar">

        <View
            android:id="@+id/view1"
            style="@style/BorderHorizontal"
            android:background="@color/colorGreyLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutRowOne"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_white"
            android:paddingTop="@dimen/content_spacing"
            android:paddingBottom="@dimen/content_spacing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowOneTitle"
                style="@style/TextViewDarkLarge"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginLeft="@dimen/content_spacing"
                android:layout_marginRight="@dimen/content_spacing"
                android:text="@string/title_learn_more_row_one"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowOne"
                style="@style/TextViewDark"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginLeft="@dimen/content_spacing"
                android:layout_marginRight="@dimen/content_spacing"
                android:text="@string/desc_learn_more_row_one"
                android:textColorLink="?colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRowOneTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewBorderRowOne"
            style="@style/BorderHorizontal"
            android:background="@color/colorGreyLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayoutRowOne" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutRowTwo"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_white"
            android:paddingTop="@dimen/content_spacing"
            android:paddingBottom="@dimen/content_spacing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBorderRowOne">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowTwoTitle"
                style="@style/TextViewDarkLarge"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:text="@string/title_learn_more_row_two"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowTwo"
                style="@style/TextViewDark"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:text="@string/desc_learn_more_row_two"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRowTwoTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewBorderRowTwo"
            style="@style/BorderHorizontal"
            android:background="@color/colorGreyLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayoutRowTwo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutRowThree"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_white"
            android:paddingTop="@dimen/content_spacing"
            android:paddingBottom="@dimen/content_spacing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBorderRowTwo">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowThreeTitle"
                style="@style/TextViewDarkLarge"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:text="@string/title_learn_more_row_three"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowThree"
                style="@style/TextViewDark"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:text="@string/desc_learn_more_row_three"
                android:textColorLink="?colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRowThreeTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewBorderRowThree"
            style="@style/BorderHorizontal"
            android:background="@color/colorGreyLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayoutRowThree" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutRowFour"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_white"
            android:paddingTop="@dimen/content_spacing"
            android:paddingBottom="@dimen/content_spacing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBorderRowThree">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowFourTitle"
                style="@style/TextViewDarkLarge"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:text="@string/title_learn_more_row_four"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRowFour"
                style="@style/TextViewDark"
                android:layout_width="@dimen/match_constraint"
                android:layout_marginStart="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/content_spacing"
                android:text="@string/desc_learn_more_row_four"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRowFourTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewBorderRowFour"
            style="@style/BorderHorizontal"
            android:background="@color/colorGreyLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayoutRowOne" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>