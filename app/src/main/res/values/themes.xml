        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SMECustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">?colorAccentApp</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_slide_down</item>
