<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/viewToolbar"
        layout="@layout/widget_transparent_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <ScrollView
        style="@style/MatchParent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewToolbar">
    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/MatchParent"
        android:orientation="vertical"
        android:padding="@dimen/grid_1">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/WrapContent"
            app:srcCompat="@drawable/bg_ic_user_creation_reminder"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_3"
            android:layout_marginBottom="@dimen/grid_3"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/MatchWrapParent"
            android:text="@string/user_creation_title_reminder"
            android:textColor="@color/dsColorDarkGray"
            android:layout_marginStart="@dimen/grid_5_half"
            android:layout_marginEnd="@dimen/grid_5_half"
            android:textStyle="bold"
            android:textSize="@dimen/text_16"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_7"
            android:layout_marginEnd="@dimen/grid_7"
            android:padding="@dimen/grid_3">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReminders_userCreation"
                android:textColor="@color/dsColorDarkGray"
               style="@style/WrapContent"
                android:layout_marginTop="@dimen/content_spacing_small"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/text_view_spacing"
                android:maxLines="10"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/SMEPrimaryButtonLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/action_proceed"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="22dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>