        android:layout_marginEnd="@dimen/grid_2"
        android:layout_marginStart="@dimen/grid_1"
        android:text="@string/title_sss_umid"
        android:textColor="#4B4948"
        app:layout_constraintTop_toTopOf="@id/viewBullet3"
        app:layout_constraintBottom_toBottomOf="@id/viewBullet3"
        app:layout_constraintEnd_toStartOf="@id/guideLine"
        app:layout_constraintStart_toEndOf="@id/viewBullet3"/>

