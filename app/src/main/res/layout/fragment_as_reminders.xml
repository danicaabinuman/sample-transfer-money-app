        android:background="@drawable/circle_solid_orange"
        app:layout_constraintEnd_toStartOf="@id/textViewBullet3"
        app:layout_constraintStart_toStartOf="@id/viewBullet2"
        app:layout_constraintTop_toBottomOf="@id/textViewBullet2"/>

    <TextView
