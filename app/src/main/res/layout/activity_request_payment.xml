<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearlayout"
    style="@style/DefaultBackgroundMatchParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Payment Link"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_2"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/form_total_amount_required"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_amount"
            style="@style/TextInputLayoutForm"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/grid_1_half"
            app:hintEnabled="false">


            <com.unionbankph.corporate.app.common.widget.edittext.autoformat.currencyedittext.CurrencyEditText
                android:id="@+id/et_amount"
                style="@style/EditTextAmount"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/content_spacing"
                android:inputType="numberDecimal"
                android:paddingEnd="@dimen/content_spacing"
                app:currencySymbol="@string/title_php"
                app:useCurrencySymbolAsHint="true" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_4"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/form_payment_for_required"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutForm"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/grid_1_half"
            android:hint="@string/form_hint_eg_10_peppermint_candles">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_paymentFor"
                style="@style/TextInputEditTextFormCounter"
                android:paddingBottom="40dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/tv_text_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_text_counter_1000"
                android:layout_gravity="right"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_3"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/form_notes_optional"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutForm"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/grid_1_half"
            android:hint="@string/form_hint_eg_for_marga">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_notes"
                style="@style/TextInputEditTextForm"
                android:inputType="text"
                android:paddingBottom="40dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_4"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/form_payment_link_expiry"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_status"
            style="@style/TextInputLayoutForm"
            android:layout_width="match_parent"
            android:hint="@string/form_hint_12_hours">

            <Spinner
                android:id="@+id/dropdownPaymentLinkExport"
                style="@style/Spinner.DropDownOrange" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/btnRequestPaymentGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_7"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/RoundedButtonOrange"
            android:text="@string/form_btn_generate"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/text_16"
            android:textAlignment="center"
            android:textStyle="bold"
            android:clickable="false"/>

        <TextView
            android:id="@+id/btnRequestPaymentCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1_half"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/form_btn_cancel"
            android:textSize="@dimen/text_16"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>