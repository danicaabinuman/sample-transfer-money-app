<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btnSaveAndExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save and Exit"
                android:textColor="#FF8200"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUploadPhotosIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/cl_app_bar">
        <TextView
            android:id="@+id/tvUploadPhotosIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:text="Upload photos of your products or photos that best describe the services offered"
            android:textSize="@dimen/text_28"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvMaximum6Photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="(Maximum of 6 photos only"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUploadPhotosIntro" />

        <ImageView
            android:id="@+id/ivUploadPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_upload_photos"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMaximum6Photos" />

        <TextView
            android:id="@+id/btnAddPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="ADD PHOTOS"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/bg_gradient_orange_2"
            android:padding="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUploadPhotos"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelectedPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cl_app_bar">
        <TextView
            android:id="@+id/btnAddPhotos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ ADD PHOTOS"
            android:textStyle="bold"
            android:background="@drawable/bg_dashed"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="90dp"
            android:paddingEnd="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/llImages1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnAddPhotos2">

            <ImageView
                android:id="@+id/ivPhotoFromGallery"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:background="@drawable/flag_philippines"
                android:layout_weight="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnAddPhotos2"/>

            <ImageView
                android:id="@+id/ivPhotoFromGallery2"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="0.5"
                android:background="@drawable/flag_japan"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/btnAddPhotos2"
                app:layout_constraintStart_toEndOf="@+id/ivPhotoFromGallery"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llImages2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/llImages1">

            <ImageView
                android:id="@+id/ivPhotoFromGallery3"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:background="@drawable/flag_philippines"
                android:layout_weight="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnAddPhotos2"/>

            <ImageView
                android:id="@+id/ivPhotoFromGallery4"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="0.5"
                android:background="@drawable/flag_japan"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/btnAddPhotos2"
                app:layout_constraintStart_toEndOf="@+id/ivPhotoFromGallery"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llImages3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/llImages2">

            <ImageView
                android:id="@+id/ivPhotoFromGallery5"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:background="@drawable/flag_philippines"
                android:layout_weight="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnAddPhotos2"/>

            <ImageView
                android:id="@+id/ivPhotoFromGallery6"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="0.5"
                android:background="@drawable/flag_japan"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/btnAddPhotos2"
                app:layout_constraintStart_toEndOf="@+id/ivPhotoFromGallery"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_next"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_back_to_dashboard"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>