<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item1"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    app:layout_goneMarginBottom="10dp"
    android:background="@drawable/bg_card_view_payment_status"
    android:gravity="center"
    android:weightSum="2.1"
    android:layout_marginBottom="@dimen/text_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:text="@string/payment_link_reference_no"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="60dp"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="3dp"
                android:text="UNPAID"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#F6B000"
                android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_unpaid"/>




        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReferenceNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="ABCD-12345-09876"/>

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Jan 15, 2021, 6:00 PM"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/view_dashed"
        android:layout_weight=".1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Amount"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="PHP 1,000.00"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Description"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="10 Peppermint Candles"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>