<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_error_dialogue_white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_oops_something_went_wrong_title"
        android:textSize="18sp"
        android:textColor="#FF8200"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/dialog_oops_something_went_wrong_description"
        android:textSize="14sp"
        android:textColor="#4B4948"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/btnOopsSomethingWentWrongClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/dialog_oops_something_went_wrong_action"
        android:layout_marginBottom="@dimen/grid_2"
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/btn_back_to_dashboard"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"/>

</LinearLayout>
