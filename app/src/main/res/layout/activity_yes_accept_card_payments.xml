<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/viewToolbar"
        layout="@layout/widget_transparent_rmo_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_2"
        app:layout_constraintTop_toBottomOf="@id/viewToolbar">

        <TextView
            android:id="@+id/tvYesIWantCardPayments1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, I want to accept card payments"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvYesIWantCardPayments2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_2"
            android:text="Do you currently accept card payments?"
            app:layout_constraintTop_toBottomOf="@+id/tvYesIWantCardPayments1"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            style="@style/MatchWrapParent"
            android:id="@+id/spAffiliation1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/grid_5"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tvYesIWantCardPayments2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Affiliation 1"
                android:gravity="start|center"
                android:padding="@dimen/grid_2"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_gradient_white_radius4"
                android:drawableEnd="@drawable/ic_arrow_right"/>

            <include
                android:id="@+id/layoutAffiliation1"
                layout="@layout/spinner_card_payments_affiliation_1"
                android:visibility="gone"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAffiliation2"
            style="@style/MatchWrapParent"
            android:text="Affiliation 2"
            android:gravity="start|center"
            android:paddingStart="@dimen/grid_2"
            android:paddingEnd="@dimen/grid_2"
            android:layout_marginTop="@dimen/grid_2"
            android:background="@drawable/bg_gradient_white_radius4"
            android:drawableEnd="@drawable/ic_arrow_right"
            app:layout_constraintTop_toBottomOf="@id/spAffiliation1"
            app:layout_constraintStart_toStartOf="parent"/>

        <CheckBox
            android:id="@+id/cb_NoOtherAffiliation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_14"
            android:onClick="checkedNoAffiliation"
            app:layout_constraintTop_toBottomOf="@id/btnAffiliation2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvNoOtherAffiliation"
            style="@style/WrapContent"
            android:layout_marginTop="124dp"
            android:text="I don't have other affiliation"
            android:textColor="@color/colorDarkGray4B4948"
            android:textSize="@dimen/text_16"
            app:layout_constraintTop_toBottomOf="@id/btnAffiliation2"
            app:layout_constraintStart_toEndOf="@id/cb_NoOtherAffiliation"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_4"
        android:background="@drawable/bg_gradient_orange_radius4"
        android:text="@string/action_next"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>