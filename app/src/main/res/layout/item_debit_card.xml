<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewDebitCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_3_half"
    android:layout_marginStart="@dimen/grid_2"
    android:layout_marginEnd="@dimen/grid_2"
    android:layout_marginBottom="@dimen/grid_2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardElevation="@dimen/default_elevation"
    android:padding="@dimen/content_spacing_xl"
    app:cardCornerRadius="@dimen/card_radius_half"
    android:background="@drawable/style_button_with_icon"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginEnd="@dimen/content_spacing"
            android:layout_marginStart="@dimen/content_spacing"
            android:id="@+id/constraintLayoutFeatureCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewDebitTitle"
                style="@style/SMESubtitle2"
                android:textSize="@dimen/text_14"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/grid_2"

                android:text="@string/title_getgo_debit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/textViewDebitContent"
                android:layout_width="0dp"
                style="@style/SMECaption"
                android:layout_marginTop="@dimen/grid_1_half"

                android:text="@string/msg_debit_type"
                app:layout_constraintTop_toBottomOf="@id/textViewDebitTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"


                />

            <androidx.appcompat.widget.AppCompatImageView

                android:id="@+id/imageViewIcon"
                android:layout_marginTop="@dimen/content_spacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_getgo_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewDebitContent"
                app:layout_constraintStart_toStartOf="parent"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

