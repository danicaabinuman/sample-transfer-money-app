<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/viewToolbar"
        layout="@layout/widget_transparent_rmo_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_2"
        app:layout_constraintTop_toBottomOf="@id/viewToolbar">

        <TextView
            android:id="@+id/tvOneLastThing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One last thing..."
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvAverageMonthlyVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_3"
            android:text="What's your average monthly volume?"
            app:layout_constraintTop_toBottomOf="@id/tvOneLastThing"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMonthlyVolumeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_border_rectangle"
            app:layout_constraintTop_toBottomOf="@id/tvAverageMonthlyVolume">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMonthlyVolume"
                style="@style/TextInputLayoutForm"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/grid_3"
                android:layout_marginStart="@dimen/grid_9"
                android:layout_marginEnd="@dimen/grid_9"
                app:hintEnabled="false"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMonthlyVolume"
                    style="@style/TextInputEditTextFormCounter" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderMonthlyVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:layout_marginStart="@dimen/grid_2"
                android:layout_marginEnd="@dimen/grid_2"
                android:valueFrom="10000"
                android:valueTo="2000000"
                android:value="100000"
                app:thumbColor="#ED5635"
                app:thumbRadius="@dimen/grid_3_half"
                app:haloColor="@color/colorWhite"
                app:trackColor="#ED5635"
                app:trackHeight="@dimen/grid_2"
                app:labelBehavior="gone"
                app:layout_constraintTop_toBottomOf="@id/tilMonthlyVolume"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvAverageTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_3"
            android:text="What's your average transaction amount?"
            app:layout_constraintTop_toBottomOf="@id/clMonthlyVolumeSlider"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTransactionAmountSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_border_rectangle"
            app:layout_constraintTop_toBottomOf="@id/tvAverageTransactionAmount">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTransactionAmount"
                style="@style/TextInputLayoutForm"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/grid_3"
                android:layout_marginStart="@dimen/grid_9"
                android:layout_marginEnd="@dimen/grid_9"
                app:hintEnabled="false"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTransactionAmount"
                    style="@style/TextInputEditTextFormCounter" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderTransactionAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:layout_marginStart="@dimen/grid_2"
                android:layout_marginEnd="@dimen/grid_2"
                android:valueFrom="10000"
                android:valueTo="2000000"
                android:value="100000"
                app:thumbColor="#ED5635"
                app:thumbRadius="@dimen/grid_3_half"
                app:haloColor="@color/colorWhite"
                app:trackColor="#ED5635"
                app:trackHeight="@dimen/grid_2"
                app:labelBehavior="gone"
                app:layout_constraintTop_toBottomOf="@id/tilTransactionAmount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvNominateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_3"
            android:text="Nominate Settlement Account"
            app:layout_constraintTop_toBottomOf="@id/clTransactionAmountSlider"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1"
            android:paddingStart="@dimen/grid_2"
            android:paddingEnd="@dimen/grid_2"
            android:text="Select account"
            android:textColor="#BFBFBF"
            android:textAllCaps="false"
            android:gravity="start|center"
            android:background="@drawable/bg_dashed"
            android:drawableEnd="@drawable/ic_add_sign"
            app:layout_constraintTop_toBottomOf="@id/tvNominateAccount"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        android:text="REVIEW DETAILS"
        android:textColor="#BFBFBF"
        android:backgroundTint="@color/dsColorExtraLightGray"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>