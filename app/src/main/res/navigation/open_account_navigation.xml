<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainNavigation"
    app:startDestination="@id/account_selection_fragment">

    <fragment
        android:id="@+id/account_selection_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.select_account.OAAccountSelection"
        tools:layout="@layout/fragment_oa_account_selection">

        <action
            android:id="@+id/action_selection_to_reminder"
            app:destination="@id/reminder_fragment"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/reminder_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.reminder.OAReminderFragment"
        tools:layout="@layout/fragment_oa_reminder">

        <action
            android:id="@+id/action_reminder_to_enter_name"
            app:destination="@id/enter_name_fragment"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/enter_name_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.enter_name.OAEnterNameFragment"
        android:label="enter_name_fragment"
        tools:layout="@layout/fragment_oa_enter_name">

        <action
            android:id="@+id/action_enter_name_to_tnc_reminder"
            app:destination="@id/tnc_reminder_fragment"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right">
        </action>
    </fragment>

    <fragment
        android:id="@+id/tnc_reminder_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.tnc_reminder.OATNCReminderFragment"
        android:label="tnc_reminder_fragment"
        tools:layout="@layout/fragment_oa_tnc_reminder">

    <action
        android:id="@+id/action_tnc_reminder_to_tnc"
        app:destination="@id/tnc_fragment"
        app:enterAnim="@anim/anim_enter_from_right"
        app:exitAnim="@anim/anim_exit_to_left"
        app:popEnterAnim="@anim/anim_enter_from_left"
        app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/tnc_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.tnc.OATNCFragment"
        android:label="tnc_fragment"
        tools:layout="@layout/fragment_oa_terms_and_condition">

        <action
            android:id="@+id/action_tnc_to_enter_contact_info"
            app:destination="@id/enter_contact_info"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/enter_contact_info"
        android:name="com.unionbankph.corporate.open_account.presentation.enter_contact_info.OAEnterContactInfoFragment"
        android:label="enter_contact_info_fragment"
        tools:layout="@layout/fragment_oa_enter_contact_info">

        <action
            android:id="@+id/action_enter_contact_to_otp"
            app:destination="@id/otp_fragment"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/otp_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.otp.OaOTPFragment"
        android:label="@string/title_one_time_password"
        tools:layout="@layout/fragment_oa_otp">

        <action
            android:id="@+id/action_otp_to_nominate_password"
            app:destination="@id/nominate_password"
            app:enterAnim="@anim/anim_enter_from_right"
            app:exitAnim="@anim/anim_exit_to_left"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/nominate_password"
        android:name="com.unionbankph.corporate.open_account.presentation.nominate_password.OaNominatePasswordFragment"
        android:label="@string/header_user_creation_nominate_password"
        tools:layout="@layout/fragment_oa_nominate_password">
    <action
        android:id="@+id/action_nominate_to_permission_settings"
        app:destination="@id/permission_settings_fragment"
        app:enterAnim="@anim/anim_enter_from_right"
        app:exitAnim="@anim/anim_exit_to_left"
        app:popEnterAnim="@anim/anim_enter_from_left"
        app:popExitAnim="@anim/anim_exit_to_right"/>
    </fragment>

    <fragment
        android:id="@+id/permission_settings_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.personalise_settings.OAPersonaliseSettingsFragment"
        android:label="@string/header_user_creation_permission_settings"
        tools:layout="@layout/fragment_oa_personalise_settings">

        <action
            android:id="@+id/action_permission_settings_to_confirmation_message"
            app:destination="@id/confirmation_message_fragment"
            app:enterAnim="@anim/anim_slide_up"
            app:exitAnim="@anim/anim_dialog_slide_down"
            app:popEnterAnim="@anim/anim_enter_from_left"
            app:popExitAnim="@anim/anim_exit_to_right"/>

    </fragment>
    <fragment
        android:id="@+id/confirmation_message_fragment"
        android:name="com.unionbankph.corporate.open_account.presentation.confirmation_message.OAConfirmationMessageFragment"
        android:label="@string/header_user_creation_confirmation_page"
        tools:layout="@layout/fragment_oa_confirmation_page"/>

</navigation>